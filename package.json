{
  "name": "octokit-auth-probot",
  "version": "0.0.0-development",
  "description": "Octokit authentication strategy that supports token, app (JWT), and event-based installation authentication",
  "main": "index.js",
  "scripts": {
    "build": "node scripts/build.mjs && tsc -p tsconfig.json",
    "lint": "prettier --check '{src,test}/**/*.{ts,md}' *.md *.json",
    "lint:fix": "prettier --write '{src,test}/**/*.{ts,md}' *.md *.json",
    "pretest": "npm run -s lint",
    "test": "jest --coverage"
  },
  "repository": "github:probot/octokit-auth-probot",
  "keywords": [
    "octokit-authentication-strategy"
  ],
  "author": "Gregor Martynus (https://twitter.com/gr2m)",
  "license": "ISC",
  "dependencies": {
    "@octokit/auth-app": "^6.0.0",
    "@octokit/auth-token": "^4.0.0",
    "@octokit/auth-unauthenticated": "^5.0.0",
    "@octokit/types": "^12.0.0"
  },
  "peerDependencies": {
    "@octokit/core": ">=5.0"
  },
  "devDependencies": {
    "@octokit/core": "^5.0.0",
    "@octokit/tsconfig": "^2.0.0",
    "@types/jest": "^29.5.6",
    "@types/node": "^18.18.6",
    "esbuild": "^0.19.5",
    "fetch-mock": "npm:@gr2m/fetch-mock@9.11.0-pull-request-644.1",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "mockdate": "^3.0.5",
    "prettier": "^3.0.3",
    "semantic-release": "^22.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "test/tsconfig.test.json"
        }
      ]
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "release": {
    "branches": [
      "+([0-9]).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ]
    ]
  }
}
